<!-- ItemJoin build file -->

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>me.RockinChaos.itemjoin</groupId>
	<artifactId>ItemJoin</artifactId>
	<version>5.0.6-SNAPSHOT-b${env.BUILD_NUMBER}</version>
	<build>
		<sourceDirectory>${project.basedir}</sourceDirectory>
		<resources>
			<resource>
				<targetPath>.</targetPath>
				<filtering>true</filtering>
				<directory>.</directory>
				<includes>
					<include>*.yml</include>
				</includes>
			</resource>
			<resource>
				<targetPath>./files</targetPath>
				<filtering>true</filtering>
				<directory>./files</directory>
				<includes>
					<include>**/*.yml</include>
					<include>**/*.txt</include>
					<include>**/*.jpg</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
					<encoding>Cp1252</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<artifactSet>
								<includes>
									<include>tv.mineinthebox.simpleserver:SimpleHttpServer:jar:</include>
								</includes>
							</artifactSet>
							<relocations>
								<relocation>
									<pattern>tv.mineinthebox.simpleserver</pattern>
									<shadedPattern>tv.mineinthebox.simpleserver</shadedPattern>
									<pattern>com.googlecode.json-simple</pattern>
									<shadedPattern>com.googlecode.json-simple</shadedPattern>
								</relocation>
							</relocations>
							<filters>
								<filter>
									<artifact>*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.RSA</exclude>
										<exclude>META-INF/*.INF</exclude>
									</excludes>
								</filter>
							</filters>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
    <!--Spigot/CraftBukkit Repository-->
		<repository>
       		<id>spigot-repo</id>
        	<url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
		</repository>
    <!--Maven Repository-->
		<repository>
			<id>sk89q-repo</id>
			<url>https://maven.sk89q.com/repo/</url>
		</repository>
    <!--PlaceholderAPI Repository-->
        <repository>
            <id>placeholderapi</id>
            <url>http://repo.extendedclip.com/content/repositories/placeholderapi/</url>
        </repository>
    <!--AuthMe Repository-->
        <repository>
        	<id>codemc-repo</id>
	        <url>http://repo.codemc.org/repository/maven-public/</url>
        </repository>
    <!--Mojang Repository-->
		<repository>
			<id>mojang</id>
			<url>https://libraries.minecraft.net/</url>
		</repository>
    <!--bStats Repository-->
		<repository>
			<id>CodeMC</id>
			<url>https://repo.codemc.org/repository/maven-public</url>
		</repository>
	</repositories>
	<dependencies>
    <!--Maven WorldUtils API-->
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>LATEST</version>
		</dependency>
    <!--Spigot API-->
		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>LATEST</version>
         <scope>provided</scope>
		</dependency>
    <!--CraftBukkit API-->
		<dependency>
			<groupId>org.bukkit</groupId>
            <artifactId>bukkit</artifactId>
            <version>LATEST</version>
         <scope>provided</scope>
		</dependency>
    <!--PlaceholderAPI API-->
        <dependency>
	        <groupId>me.clip</groupId>
	        <artifactId>placeholderapi</artifactId>
	        <version>LATEST</version>
         <scope>provided</scope>
        </dependency>
    <!--AuthMe API-->
        <dependency>
	        <groupId>fr.xephi</groupId>
	        <artifactId>authme</artifactId>
	        <version>LATEST</version>
         <scope>provided</scope>
        </dependency>
    <!--Mojang AuthLib API-->
		<dependency>
			<groupId>com.mojang</groupId>
			<artifactId>authlib</artifactId>
			<version>1.5.21</version>
		</dependency>
    <!--bStats API-->
    	<dependency>
			<groupId>org.bstats</groupId>
			<artifactId>bstats-bukkit</artifactId>
			<version>1.4</version>
			<scope>compile</scope>
    	</dependency>
    <!--Apache API-->
    	<dependency>
       	 	<artifactId>commons-io</artifactId>
        	<groupId>commons-io</groupId>
        	<scope>compile</scope>
        	<version>2.5</version>
    	</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
			<artifactId>log4j-core</artifactId>
			<version>2.3</version>
		</dependency>
    <!--Google API-->
	    <dependency>
	        <groupId>com.googlecode.json-simple</groupId>
	        <artifactId>json-simple</artifactId>
	        <version>1.1.1</version>
	    </dependency>
    <!--Google API-->
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava</artifactId>
			<version>18.0</version>
		</dependency>
    <!--Vault Local-->
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/me/RockinChaos/itemjoin/extra/VaultAPI.jar</systemPath>
            <version>LEGACY</version>
        </dependency>
    <!--HeadDatabase Local-->
        <dependency>
            <groupId>me.HeadDatabaseAPI</groupId>
            <artifactId>HeadDatabaseAPI</artifactId>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/me/RockinChaos/itemjoin/extra/HeadDatabaseAPI.jar</systemPath>
            <version>LEGACY</version>
        </dependency>
    <!--BetterNick Local-->
        <dependency>
            <groupId>me.BetterNickAPI</groupId>
            <artifactId>BetterNickAPI</artifactId>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/me/RockinChaos/itemjoin/extra/BetterNickAPI.jar</systemPath>
            <version>LEGACY</version>
        </dependency>
    <!--TokenEnchant Local-->
        <dependency>
            <groupId>me.TokenEnchantAPI</groupId>
            <artifactId>TokenEnchantAPI</artifactId>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/me/RockinChaos/itemjoin/extra/TokenEnchantAPI.jar</systemPath>
            <version>LEGACY</version>
        </dependency>
    <!--WorldGuard Legacy Local-->
        <dependency>
            <groupId>me.WorldGuard.Legacy</groupId>
            <artifactId>WorldGuard</artifactId>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/me/RockinChaos/itemjoin/extra/WorldGuard-Legacy.jar</systemPath>
            <version>LEGACY</version>
        </dependency>
    <!--WorldEdit Legacy Local-->
        <dependency>
            <groupId>me.WorldEdit.Legacy</groupId>
            <artifactId>WorldEdit</artifactId>
            <scope>system</scope>
            <systemPath>${pom.basedir}/src/me/RockinChaos/itemjoin/extra/WorldEdit-Legacy.jar</systemPath>
            <version>LEGACY</version>
        </dependency>
	</dependencies>
	<scm>
		<url>https://github.com/RockinChaos/ItemJoin</url>
		<connection>scm:git:ssh://git@github.com/RockinChaos/ItemJoin</connection>
		<developerConnection>scm:git:ssh://git@github.com/RockinChaos/ItemJoin.git</developerConnection>
	</scm>
	<organization>
		<name>ItemJoin</name>
		<url>https://github.com/RockinChaos/ItemJoin</url>
	</organization>
	<name>ItemJoin</name>
	<url>https://www.spigotmc.org/resources/itemjoin.12661/</url>
	<description>Get custom items on join.</description>
	<issueManagement>
		<url>https://github.com/RockinChaos/ItemJoin/issues</url>
		<system>Github</system>
	</issueManagement>
	<ciManagement>
		<system>Jenkins</system>
		<url>http://ci.craftationgaming.com/job/ItemJoin/</url>
	</ciManagement>
    <properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>